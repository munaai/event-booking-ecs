cat > .gitignore << 'EOF'
# macOS
.DS_Store

# Node
node_modules/
**/node_modules/

# Package managers
pnpm-lock.yaml
yarn-error.log*
npm-debug.log*
yarn-debug.log*
*.log

# Env files
.env
.env.*
!.env.example

# Next.js / Turborepo
.next/
.turbo/
out/

# Builds / coverage
dist/
build/
coverage/

# Prisma / SQLite (adjust if you need these tracked)
*.sqlite
*.db
prisma/*.db
packages/prisma/.env

# Editor
.vscode/
.idea/

# Docker
**/.docker/
EOF

