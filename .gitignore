cat > .gitignore << 'EOF'
# macOS
.DS_Store

# Node
node_modules/
**/node_modules/

# Next.js / Turborepo
.next/
.turbo/
out/

# Builds / coverage
dist/
build/
coverage/

# Logs
*.log
yarn-error.log*
npm-debug.log*
yarn-debug.log*

# Env
.env
.env.*
!.env.example

# Editor
.vscode/
.idea/

# Prisma / local db (adjust if you actually need these tracked)
*.sqlite
*.db
EOF
